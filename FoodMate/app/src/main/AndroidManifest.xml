<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jhu.oose.group18.foodmate">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps" />
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".RoleSelectActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".PostActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".MessageBoxActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".ReservationActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".ListRestaurantActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".RecommendationActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".MyRecyclerViewAdapter" />
        <activity android:name=".ReviewHostHistoryActivity" />
        <activity android:name=".ReviewGuestHistoryActivity" />
        <activity android:name=".DetailedHostPostActivity" />
        <activity android:name=".DetailedGuestResponseActivity"></activity>
    </application>

</manifest>